<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Цвет, когда нажимаешь мышью на кнопку-->
    <SolidColorBrush x:Key="DarkestBrush" Color="#003b80"/>
    <!--Цвет, когда курсор наведен на кнопку-->
    <SolidColorBrush x:Key="DarkerBrush" Color="#0053b3"/>
    <!--Темный цвет заднего фона (и плашки с названием программы слева)-->
    <SolidColorBrush x:Key="CommonDarkBrush" Color="#0077ff"/>
    <!--Средний цвет заднего фона-->
    <SolidColorBrush x:Key="CommonMediumBrush" Color="#3392ff"/>
    <!--Светлый цвет заднего фона-->
    <SolidColorBrush x:Key="CommonLightBrush" Color="AliceBlue"/>
    <!--Черный цвет-->
    <SolidColorBrush x:Key="Black" Color="Black"/>
    <!--Красный цвет для кнопки закрытия-->
    <SolidColorBrush x:Key="Red" Color="Red"/>
    <!--Темный красный цвет для кнопки закрытия-->
    <SolidColorBrush x:Key="DarkRed" Color="#A30008"/>
    <!--Прозрачный цвет-->
    <SolidColorBrush x:Key="TransparentBrush" Color="Transparent"/>
    <!--Используется для background у DataGridRowHeader и для выделения ListBoxItem в CallingName в DataGrid-->
    <SolidColorBrush x:Key="FadedBrush" Color="#daeafd"/>
    <!-- -->
    <SolidColorBrush x:Key="FadedDarkBrush" Color="#add0fb"/>

</ResourceDictionary>